@model CorporatePortal.Models.Entry

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateEntry</title>
</head>
<body>

<h4>Entry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEntry" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Дата</label>
                    <input asp-for="Date" class="form-control" type="date"/>
                    <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hours" class="control-label">Часы</label>
                <input asp-for="Hours" class="form-control" />
                <span asp-validation-for="Hours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
                @Html.DropDownList("TaskId", (SelectList)ViewBag.Tasks, "Выберите задачу", new { @class = "form-control" })
            <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-primary" asp-action="CreateEntry" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Back">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
