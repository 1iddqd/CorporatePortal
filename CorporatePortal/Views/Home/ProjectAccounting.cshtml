@model List<Project>

<!DOCTYPE html>
<html lang="ru">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>NORBIT тайм-менеджмент | Проекты</title>
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<video autoplay muted loop id="bgVideo">
		<source src="/photos/main3.mp4" type="video/mp4" />
		Your browser does not support HTML5 video.
	</video>
	<div class="container">
		<header class="header">
			<div class="logo">
				<img src="/photos/logon.png" alt="NORBIT" />
				<ul class="nav-links">
					<li><a href="/Home/Index">Главная</a></li>
					<li><a href="/Home/ProjectAccounting">Проекты</a></li>
					<li><a href="/Home/TaskAccounting">Задачи</a></li>
					<li><a href="/Home/PostingAccounting">Проводки</a></li>
				</ul>
			</div>
			
		</header>

		<main class="main">
			<table class="table">
				<tr>
					<th>Номер проекта</th>
					<th>Название</th>
					<th>Код</th>
					<th>Активен?</th>
					<th> </th>
					<th> </th>
				</tr>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.Name</td>
						<td>@item.Code</td>
						@if(@item.IsActive)
						{
							<td>Да</td>
						}
						else
						{
							<td>Нет</td>
						}
						<td>
							<form asp-controller="Project" asp-action="EditProject" method="get">
								<input type="hidden" name="id" value="@item.Id" />
								<button class="btn add-btn" type="submit">Редактировать</button>
							</form>
                        </td>
						<td>
							<form asp-controller="Project" asp-action="DeleteProject" method="get">
								<input type="hidden" name="id" value="@item.Id" />
								<button class="btn add-btn" type="submit">X</button>
							</form>
						</td>
					
					</tr>
					

				}
		
			</table>
			<div class="button-container">
				<a class="btn add-btn" style="text-decoration: none" asp-controller="Project" asp-action="CreateProject">Добавление</a>
		
			</div>
		</main>
		<footer class="footer">
			<div class="social">
				<a href="https://www.youtube.com/norbittv"><img src="/photos/youtube.png" alt="yt" /></a>
				<a href="https://vk.com/norbit_ru"><img src="/photos/vk1.png" alt="" /></a>
				<a href="https://t.me/norbit_ru"><img src="/photos/telegram.png" alt="tg" /></a>
			</div>
			<p>&copy; 2024. Все права защищены.</p>

		</footer>
	</div>
</body>
</html>