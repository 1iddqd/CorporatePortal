@model List<CorporatePortal.Models.Task>

<!DOCTYPE html>
<html lang="ru">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>NORBIT тайм-менеджмент | Задачи</title>
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<video autoplay muted loop id="bgVideo">
		<source src="/photos/main3.mp4" type="video/mp4" />
		Your browser does not support HTML5 video.
	</video>
	<div class="container">
		<header class="header">
			<div class="logo">
				<img src="/photos/logon.png" alt="NORBIT" />
				<ul class="nav-links">
					<li><a href="/Home/Index">Главная</a></li>
					<li><a href="/Home/ProjectAccounting">Проекты</a></li>
					<li><a href="/Home/TaskAccounting">Задачи</a></li>
					<li><a href="/Home/PostingAccounting">Проводки</a></li>
				</ul>
			</div>
			
		</header>

		<main class="main">
			<table class="table">
				<tr>
					<th>Номер задачи</th>
					<th>Название</th>
					<th>Номер проекта</th>
					<th>Активна?</th>
				</tr>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.Name</td>
						<td>@item.ProjectId</td>
						<td>@item.IsActive</td>
					</tr>
				}
			</table>
			<div class="button-container">
				<a class="btn add-btn" asp-controller="Task" asp-action="CreateTask">Добавление</a>
				<button class="btn edit-btn">Редактирование</button>
				<button class="btn delete-btn">Удаление</button>
			</div>
		</main>

		<footer class="footer">
			<div class="social">
				
				<a href="#"><img src="/photos/Twitter.png" alt="Twitter" /></a>
				<a href="#"><img src="/photos/vk.png" alt="VK" /></a>
				<a href="#"><img src="/photos/Instagram.png" alt="Instagram" /></a>
			</div>
			<p>&copy; 2024. Все права защищены.</p>
			<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
				Политика конфиденциальности
			</a>
		</footer>
	</div>
</body>
</html>
