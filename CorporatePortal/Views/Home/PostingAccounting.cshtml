@model List<Entry>

<!DOCTYPE html>
<html lang="ru">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>NORBIT тайм-менеджмент | Проводки</title>
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<video autoplay muted loop id="bgVideo">
		<source src="/photos/main3.mp4" type="video/mp4" />
		Your browser does not support HTML5 video.
	</video>
	<div class="container">
		<header class="header">
			<div class="logo">
				<img src="/photos/logon.png" alt="NORBIT" />
				<ul class="nav-links">
					<li><a href="/Home/Index">Главная</a></li>
					<li><a href="/Home/ProjectAccounting">Проекты</a></li>
					<li><a href="/Home/TaskAccounting">Задачи</a></li>
					<li><a href="/Home/PostingAccounting">Проводки</a></li>
				</ul>
			</div>
			
		</header>

		<main class="main">
			<table class="table">
				<thead>
					<tr>
						<th>Номер проходки</th>
						<th>Дата</th>
						<th>Часы</th>
						<th>Описание</th>
						<th>Номер задачи</th>
						<th> </th>
					</tr>
				</thead>
				<tbody>
					<tr>
						@foreach (var item in Model)
						{
						<tr>
							<td>@item.Id</td>
							<td>@item.Date</td>
							<td>@item.Hours</td>
							<td>@item.Description</td>
							<td>@item.TaskId</td>
							<td>
								<form asp-controller="Entry" asp-action="EditEntry" method="get">
									<input type="hidden" name="id" value="@item.Id" />
									<button type="submit">Редактировать</button>
								</form>
							</td>
						</tr>
						}
					</tr>
					
				</tbody>
				
			
			</table>
			<div class="button-container">
				<a class="btn add-btn" asp-controller="Entry" asp-action="CreateEntry">Добавление</a>
			</div>
			<div class="button-container">
				<form asp-controller="Home" asp-action="FilterEntries" method="post">
					<input class="form-control" type="date" name="filterDate" />
					<button type="submit" class="btn btn-dark">Фильтр по дате</button>
				</form>
			</div>
			<div class="button-container">
				<form asp-controller="Home" asp-action="FilterEntriesByMonth" method="post">
					<input class="form-control" type="number" name="month" placeholder="Месяц" />
					<button type="submit" class="btn btn-dark">Фильтр по месяцу</button>
				</form>
			</div>
		</main>

		<footer class="footer">
			<div class="social">
				<a href="#"><img src="/photos/youtube.png" alt="yt" /></a>
				<a href="#"><img src="/photos/vk1.png" alt="" /></a>
				<a href="#"><img src="/photos/telegram.png" alt="tg" /></a>
			</div>
			<p>&copy; 2024. Все права защищены.</p>

		</footer>
	</div>
</body>
</html>
