@model List<Entry>

<!DOCTYPE html>
<html lang="ru">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>NORBIT тайм-менеджмент | Проводки</title>
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<div class="container">
		<header class="header">
			<div class="logo">
				<img src="/photos/logon.png" alt="NORBIT" />
				<ul class="nav-links">
					<li><a href="/Home/Index">Главная</a></li>
					<li><a href="/Home/ProjectAccounting">Проекты</a></li>
					<li><a href="/Home/TaskAccounting">Задачи</a></li>
					<li><a href="/Home/PostingAccounting">Проводки</a></li>
				</ul>
			</div>
			
		</header>

		<main class="main">
			<table class="table">
				<thead>
					<tr>
						<th>Номер проходки</th>
						<th>Дата</th>
						<th>Часы</th>
						<th>Описание</th>
						<th>Номер задачи</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						@foreach (var item in Model)
						{
						<tr>
							<td>@item.Id</td>
							<td>@item.Date</td>
							<td>@item.Hours</td>
							<td>@item.Description</td>
							<td>@item.TaskId</td>
						</tr>
						}
					</tr>
					
				</tbody>
				
			
			</table>
			<div class="button-container">
				<button class="btn add-btn">Добавление</button>
				<button class="btn edit-btn">Редактирование</button>
				<button class="btn delete-btn">Удаление</button>
			</div>
		</main>

		<footer class="footer">
			<div class="social">
				
				<a href="#"><img src="/photos/Twitter.png" alt="Twitter" /></a>
				<a href="#"><img src="/photos/vk.png" alt="VK" /></a>
				<a href="#"><img src="/photos/Instagram.png" alt="Instagram" /></a>
			</div>
			<p>&copy; 2024. Все права защищены.</p>
			<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
				Политика конфиденциальности
			</a>
		</footer>
	</div>
</body>
</html>
