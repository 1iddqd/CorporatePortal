@model CorporatePortal.Models.Task

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DeleteTask</title>
    <link rel="stylesheet" href="~/css/site2.css" />

</head>
<body>
    <video autoplay muted loop id="bgVideo">
        <source src="/photos/main3.mp4" type="video/mp4" />
        Your browser does not support HTML5 video.
    </video>
    
    <div class="container">
        <div class="cross-icon-container">
            <a href="@Url.Action("Back")" class="close-button">&times;</a>
        </div>
        <h4>Удаление задачи</h4>
    

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <dl class="row">
                <dt class="col-sm-4">ID:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                <dt class="col-sm-4">Имя:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4">Идентификатор проекта:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ProjectId)</dd>

                <dt class="col-sm-4">Активна:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IsActive)</dd>
            </dl>
            @Html.HiddenFor(model => model.Id)
        </div>
    </div>
</div>

        <form asp-action="DeleteTaskConfirmed" method="post">
            @Html.HiddenFor(model => model.Id)
                <input type="submit" value="Удалить" class="btn btn-primary" />

            </form>
</div>
</div>
    <style>
        dl.row dt {
            text-align: left;
            font-weight: bold;
        }

        dl.row dd {
            margin-bottom: 10px;
        }

        dl.row dt, dl.row dd {
            padding: 8px;
            background-color: #ffffff;
            border-radius: 4px;
            margin: 2px 0;
        }
    </style>
</body>
</html>
